<!-- start search about book -->
<aside id="search">
  <div class="container">
    <div class="ser-book">
      <div class="form">
        <h2>search</h2><br><br>
        <form  id ="search_form" method="post" onsubmit="return true">
          <input type="text" id='keyword' name="keyword"><br><br>
          <br>
          <button type="submit"> search</button>
        </form>
      </div>
      <div class="info-book">
        <h2>result</h2>
        {{#if data}}
      {{#each data}}
        <div class="data-book">
          <div class="img">
            <img src="{{this.img_url}}">
          </div>
          <div class="data">
            <p>{{this.title}}</p>
            <p>{{this.isbn}}</p>
            <p>{{this.auther}}</p>
            <p>{{this.version}}</p>
            <button><a href="mailto:{{this.creator_email}}">{{this.creator_email}}</a></button>
          </div>
        </div>
        {{/each}}
        {{/if}}
      </div>
    </div>
  </div>
</aside>
